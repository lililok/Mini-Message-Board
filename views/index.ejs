<!DOCTYPE html>
<head>
    <title>Mini Message Board</title>
</head>
<body>
    <h1><%= title %></h1>
    <ul>
        <% messages.forEach(function(message) { %>
          <li>
            <div><%= message.user %>:</div>
            <div><%= message.text %> <%= message.added %></div>
          </li>
        <% }) %>
      </ul>
    <div><a href="/new">Add a message</a></div>
</body>
</html>